{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "my-custom-blocks/featured-image-block",
  "version": "1.0.0",
  "title": "アイキャッチ画像ブロック",
  "category": "media",
  "icon": "format-image",
  "description": "投稿/固定ページのアイキャッチ画像を表示するブロックです。",
  "keywords": ["featured", "image", "thumbnail", "アイキャッチ"],
  "textdomain": "my-custom-blocks",
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "marginTop": {
      "type": "string",
      "default": "0px"
    },
    "marginBottom": {
      "type": "string",
      "default": "0px"
    },
    "imageSize": {
      "type": "string",
      "default": "full"
    }
  }
}
