{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "my-custom-blocks/sample-block",
	"version": "1.0.0",
	"title": "Sample Block",
	"category": "widgets",
	"icon": "star-filled",
	"description": "サンプルカスタムブロック",
	"keywords": [ "sample", "custom", "example" ],
	"textdomain": "my-custom-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": true,
			"gradients": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"attributes": {
		"content": {
			"type": "string",
			"default": ""
		},
		"alignment": {
			"type": "string",
			"default": "left"
		},
		"showTitle": {
			"type": "boolean",
			"default": true
		}
	},
	"example": {
		"attributes": {
			"content": "サンプルテキスト",
			"alignment": "center"
		}
	}
}
